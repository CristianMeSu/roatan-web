---
import { translations } from "../../locales.js";
const lang = Astro.props?.lang ?? "es";
const t = translations[lang] ?? translations["es"];
import { Image } from "astro:assets";
import "aos/dist/aos.css";
import olas from "../../assets/img/iconos/home/olas-blue.png";
import ave from "../../assets/img/iconos/home/ave.png";
import chica from "../../assets/img/iconos/home/chica.png";
import "../../assets/css/home.css";
---

<div
  class="welcome-container w-screen h-[16rem] md:h-[36rem] flex items-center justify-center relative"
>
<div class="images-container absolute h-full w-screen flex flex-row">
    <Image
      class="chica absolute w-28 md:w-60 lg:w-80 h-auto left-5 lg:left-7 bottom-0 z-0"
      src={chica}
      alt="logo"
      loading="eager"
    />
    <Image
      class="ave absolute w-32 md:w-60 lg:w-80 h-auto right-5 md:right-20 lg:right-36 xl:right-1/4 top-8 md:top-20 lg:top-10 z-10"
      src={ave}
      alt="logo"
      loading="eager"
    />
    
</div>
  <div class="text-container w-2/3  lg:w-1/2 text-center flex flex-col lg:block ">
    <p class="text-2xl md:text-6xl font-bebas text-[var(--secondary-color)]">
      {t.homeWelcome.title}
    </p>
    <h2 class="text-5xl md:text-9xl font-bebasBold text-[var(--primary-color)]">
      {t.homeWelcome.subtitle}
    </h2>
    <p class="text-[8px] md:text-xl text-black ">{t.homeWelcome.text}</p>
  </div>
  <div
    class="wave-container w-[26%] h-[24%] md:w-[24%] md:h-[28%] lg:w-[28%] xl:w-[35%]  xl:mb-5 mb-5 md:mb-14 right-0 bg-white absolute z-1 overflow-hidden"
  >
    <Image
      class="wave absolute w-[100%] h-[100%] right-0 top-0 object-fill"
      src={olas}
      alt="logo"
      loading="eager"
    />
    <div class="wave-cover"></div>
  </div>
 
</div>
 <div class="h-96 w-screen bg-slate-400"></div>
<script>
  const isMobile = window.innerWidth <= 1025;
  const cover = document.querySelector(".wave-cover");
  //   let isShrunk = false;

  //   setInterval(() => {
  //     if (cover) {
  //       cover.classList.toggle("shrink");
  //       isShrunk = !isShrunk;
  //     }
  //   }, 3000);
  if (!isMobile) {
    window.addEventListener("scroll", function () {
      if (!cover) return;
      if (window.scrollY > 500) {
        cover.classList.add("shrink");
      } else {
        cover.classList.remove("shrink");
      }
    });
  } else {
    window.addEventListener("scroll", function () {
      if (!cover) return;
      if (window.scrollY > 50) {
        cover.classList.add("shrink");
      } else {
        cover.classList.remove("shrink");
      }
    });
  }
</script>
