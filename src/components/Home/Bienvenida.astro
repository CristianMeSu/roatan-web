---
import { translations } from "../../locales.js";
const lang = Astro.props?.lang ?? "es";
const t = translations[lang] ?? translations["es"];
import { Image } from "astro:assets";
import "aos/dist/aos.css";
import olas from "../../assets/img/iconos/home/olas-blue.png";
import ave from "../../assets/img/iconos/home/ave.png";
import chica from "../../assets/img/iconos/home/chica.png";
import WaveObserver from "../../components/js/WaveObserver.jsx";
import WaveObserverPort from "../../components/js/WaveObserverPort.jsx";
import "../../assets/css/home.css";
---

<div
  class="welcome-container w-screen h-[34rem] md:h-[36rem] flex items-center justify-center relative overflow-hidden bg-white"
>

<WaveObserver client:visible />
<div class="images-container absolute h-full w-screen flex flex-row">
    <Image
      class="hidden md:block chica absolute w-20 md:w-60 lg:w-80 h-auto bottom-0 z-0"
      src={chica}
      alt="logo"
      loading="eager"
    />
    <Image
      class="ave absolute w-28 md:w-60 lg:w-72 h-auto right-5 md:right-20 lg:right-36 xl:right-1/4 top-0 md:top-20 lg:top-0 z-10"
      src={ave}
      alt="logo"
      loading="eager"
    />
</div>
  <div class="text-container w-full px-5 md:px-0 mt-6 md:mt-0 lg:w-1/2 text-center  flex flex-col lg:block pb-8">
    <h1><p class="text-5xl md:text-6xl font-bebas text-[var(--secondary-color)]">
      {t.homeWelcome.title}
    </p>
    <p class="text-5xl flex mb-5 flex-col md:text-9xl font-bebasBold text-[var(--primary-color)]">
      {t.homeWelcome.subtitle}
      
    </p></h1>
    <div class="w-16 mx-auto border-b-4 lg:mb-5 border-[var(--primary-color)] mb-4"></div>
    <p class="text-2xl md:text-2xl text-black ">{t.homeWelcome.text}</p>
  </div>
  <div
    class="wave-container w-[23%] h-[16%] md:w-[24%] md:h-[28%] lg:w-[28%] xl:w-[35%]  xl:mb-5 top-20 md:mb-0 md:top-28 right-0 bg-white absolute z-1 overflow-hidden"
  >
    <Image
      class="wave absolute w-[100%] h-[100%] right-0 top-0 object-fill"
      src={olas}
      alt="logo"
      loading="eager"
    />
    <div class="wave-cover"></div>
  </div>
 <WaveObserverPort client:visible />
</div>
