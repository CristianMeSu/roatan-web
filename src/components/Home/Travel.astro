---
import { translations } from "../../locales.js";
const lang = Astro.props?.lang ?? "es";
const t = translations[lang] ?? translations["es"];
import "aos/dist/aos.css";
import WaveObserverDiscover from "../../components/js/WaveObserverDiscover.jsx";
---

<div
  class="travel-container w-screen h-[12rem] md:h-[8rem] flex flex-col items-center justify-center relative overflow-hidden bg-white"
>
<WaveObserverDiscover client:visible/>
  <div class="items-container w-full lg:w-1/2 md:h-full flex flex-col md:flex-row justify-center bg-white">
    <div
      class="text-container flex flex-col mb-4 md:mb-auto h-full text-center justify-center "
    >
      <h2 class="text-3xl md:text-6xl font-bold text-[var(--primary-color)]">{t.homeTravel.title}</h2>
      <p class="text-xl md:text-3xl text-[var(--primary-color)]">{t.homeTravel.subtitle}</p>
    </div>
    <div
      class="go-container flex items-center md:h-full justify-center ml-3  md:ml-6"
    >
    <a href={`/${lang}/faqs/`} class="border-2 p-2 text-2xl rounded-lg text-[var(--primary-color)] border-[var(--primary-color)] hover:scale-110">Go!</a>
    </div>
  </div>
</div>
