---
import Menu from "../Header/Menu.astro";
import { translations } from "../../locales.js";
const lang = Astro.props?.lang ?? "es";
const t = translations[lang] ?? translations["es"];
import { Image } from "astro:assets";
import "aos/dist/aos.css";
import roatanLogo from "../../assets/img/logo/Roatan-LogoBlanco.png";
---

<header class="bg-image-header md:w-screen h-96 md:h-screen">
  <div class="bg-gradient-header md:w-screen h-96 md:h-screen">
    <Menu lang={lang} />

    <Image
      class="left-24 absolute top-10 md:top-10 w-24 h-24 xl:w-36 xl:h-36"
      src={roatanLogo}
      alt="logo"
      loading="eager"
    />
    <div
      class="title_container w-2/5 flex flex-col items-left lg:top-1/3 xl:top-1/2 left-24 absolute gap-3"
    >
      <h1
        class="text-6xl xl:text-8xl text-white font-bebas font-bold"
        set:html={t.header.title}
      />
      <h2
        class="text-2xl xl:text-4xl w-1/2 text-white font-lato text-justify mb-2"
      >
        {t.header.subtitle}
      </h2>
      <div class="border-2 border-white w-fit p-2 rounded-xl cursor-pointer">
        <a
          href="#"
          class="uppercase text-2xl xl:text-4xl w-1/2 text-white font-lato text-justify mx-6"
          >{t.header.button}</a
        >
      </div>
    </div>
  </div>
</header>
