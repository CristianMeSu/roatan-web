---
import { translations } from "../../locales.js";
import Menu from "../Header/Menu.astro";
const lang = Astro.props?.lang ?? "es";
const t = translations[lang] ?? translations["es"];
import { Image } from "astro:assets";
---

<header class="bg-image-header md:w-screen h-96 md:h-screen">
  <div class="bg-gradient-header md:w-screen h-96 md:h-screen">
    <Menu lang={lang} />

    <Image
      class="left-24 absolute top-10 md:top-10"
      src="/img/logo/Roatan-LogoBlanco.png"
      alt="logo"
      width="100"
      height="100"
      loading="eager"
    />
    <div
      class="title_container w-2/5 flex flex-col items-left lg:top-1/3 xl:top-1/2 left-24 absolute gap-3"
    >
      <h1
        class="text-6xl text-white font-bebas font-bold"
        set:html={t.header.title}
      />
      <h2 class="text-2xl w-1/2 text-white font-lato text-justify mb-2">
        {t.header.subtitle}
      </h2>
      <div class="border-2 border-white w-fit p-2 rounded-md">
        <span
          class="uppercase text-2xl w-1/2 text-white font-lato text-justify mx-6 font-lato"
          >{t.header.button}</span
        >
      </div>
    </div>
  </div>
</header>
