---
import { translations } from "../../locales.js";
const lang = Astro.props?.lang ?? "es";
const t = translations[lang] ?? translations["es"];
import footerVideo from "../../assets/video/fondo-footer.mp4";
import roatanLogo from "../../assets/img/logo/Roatan-LogoBlanco.png";
import { Image } from "astro:assets";
---

<footer class="relative w-full h-[50vh] lg:h-full bg-transparent">
  <!-- <div class="bg-white w-full h-64"></div> -->
  <div class="relative bg-transparent h-full">
    <video
      src={footerVideo}
      class="absolute w-full h-auto lg:relative bottom-0 z-2"
      autoplay
      muted
      loop
      playsinline></video>
    <div
      class="absolute z-10 bottom-0 lg:bottom-10 flex flex-col md:grid md:grid-cols-4 items-center justify-center w-full gap-3"
    >
      <div class="col-span-1"></div>
      <div class="col-span-2 flex flex-col justify-center items-center gap-10">
        <Image
          class="w-20 lg:w-32 xl:w-36 h-auto"
          src={roatanLogo}
          alt="logo"
          loading="eager"
        />
        <div class="footer-textbox-container w-5/6 h-auto">
          <div class="footer-textbox flex">
            <input
              type="text"
              class="form-control uppercase h-10 w-2/3 pl-4 bg-transparent text-white placeholder:text-white  border-2 border-white rounded-s-full focus:outline-none focus:border-[--secondary-color] focus:text-black focus:pl-4 focus:bg-white transition-all duration-300 ease-in-out"
              placeholder={t.footer.textboxPlaceholder}
            />
            <div
              class="button-container uppercase cursor-pointer flex items-center justify-center h-10 w-1/3 border-2 rounded-e-full bg-white hover:bg-[var(--secondary-color)] outline-none border-white hover:border-[var(--secondary-color)] transition-all duration-300 ease-in-out"
            >
              <a class="button-sub">{t.footer.textboxButton}</a>
            </div>
          </div>
        </div>
        <div class="text-white">
          <p> Copyright © 2025 │ By ITM Group</p>
        </div>
      </div>
      <div class="col-span-1"></div>
    </div>
  </div>
</footer>
